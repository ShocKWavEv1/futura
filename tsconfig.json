{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/hooks/useLenis.tsx",
    "src/pages/resumen/index.tsx",
    "src/pages/resumen/index.tsx",
    "src/pages/resumen/index.tsx",
    "src/components/catalog/components/swiper/swiper.jsx",
    "src/components/blurredImage/blurredImage.jsx",
    "src/components/crew/components/crewScroll/crewScroll.jsx",
    "src/components/crew/components/crewGallery/crewMemberModal/crewMemberModal.jsx"
  ],
  "exclude": ["node_modules"]
}
